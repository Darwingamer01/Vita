// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum replacements (Strings in SQLite)
// ResourceType, AvailabilityStatus, VerificationLevel, UrgencyLevel, RequestStatus

model Resource {
  id                String   @id @default(uuid())
  type              String // ResourceType
  title             String
  description       String?
  
  // Flattened Location
  lat               Float
  lng               Float
  address           String?
  city              String?
  district          String?

  // Contact Info (Stored as JSON)
  contact           String // JSON stringified ContactInfo: { phone, whatsapp, email, etc. }

  status            String // AvailabilityStatus
  verificationLevel String // VerificationLevel
  lastUpdated       DateTime @default(now())

  // Metadata
  metadata          String? // JSON stringified type-specific metadata (Hospital, Doctor, etc.)

  reportCount       Int      @default(0)
  upvoteCount       Int      @default(0)
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Request {
  id            String   @id @default(uuid())
  title         String
  description   String
  type          String // ResourceType
  contact       String
  location      String
  urgency       String // UrgencyLevel
  status        String // RequestStatus @default("OPEN")
  createdAt     DateTime @default(now())
  responseCount Int      @default(0)

  // JSON fields
  timeline      String // JSON stringified ActivityLogItem[]
  matches       String // JSON stringified MatchSuggestion[]
  adminNotes    String?
}

model Alert {
  id        String   @id @default(uuid())
  title     String
  message   String
  district  String
  severity  String // 'INFO' | 'WARNING' | 'CRITICAL'
  type      String // 'TRAFFIC' | 'WEATHER' | 'MEDICAL' | 'SECURITY'
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Volunteer {
  id        String   @id @default(uuid())
  name      String
  skills    String // JSON stringified string[]
  location  String
  status    String // 'AVAILABLE' | 'BUSY'
  points    Int      @default(0)
  badges    String // JSON stringified string[]
  createdAt DateTime @default(now())
}

model VolunteerTask {
  id        String   @id @default(uuid())
  title     String
  location  String
  urgent    Boolean  @default(false)
  points    Int
  status    String   @default("OPEN") // OPEN, ASSIGNED, COMPLETED
  createdAt DateTime @default(now())
}

// NextAuth Models

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password          String?
  phoneNumber       String?
  location          String?
  emergencyContacts String? // JSON stringified string[]
  notificationPreferences String? // JSON: { email: boolean, sms: boolean, push: boolean }
  pushSubscription  String?   // JSON stringified PushSubscription
  accounts          Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
